{
    "name": "lash",
    "rm-configure": true,
    "config-opts": [
        "--disable-static",
        "CFLAGS=-D_GNU_SOURCE"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "*.la"
    ],
    "sources": [
        {
            "type": "archive",
            "url": "https://download.savannah.gnu.org/releases/lash/lash-0.5.4.tar.gz",
            "sha256": "105a7da84415c4725c6bcad28e70f23aeb4534f94fc80ca262b6a2cef2226c16"
        },
        {
            "type": "patch",
            "paths": [
                "patches/lash/0001-configure-remove-aclocal-m4.patch",
                "patches/lash/0002-Fix-build-with-recent-gcc.patch",
                "patches/lash/0003-Fix-linking.patch"
            ]
        },
        {
            "type": "script",
            "commands": [
                "autoreconf -fiv"
            ],
            "dest-filename": "autogen.sh"
        }
    ]
}
